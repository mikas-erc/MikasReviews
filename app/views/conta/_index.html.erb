<div class="col-md-12 main">
  <div id="collection_index">
    <div class="col-md-2">
      <%=button_to 'Inserir', new_contum_path, method: :get, class:"btn btn-success"%>
    </div>
  <br>
  <br>
  <table class="table table-striped">
    <thead>
       <tr>
         <th>ID</th>
         <th>Nickname</th>
         <th>Nome</th>
         <th>Email</th>
         <th>Tipo</th>
         <th>Ações</th>
       </tr>
    </thead>
    <% @contas.each do |t| %>
     <tbody>
       <td> <%= t.id%> </td>
       <td> <%= t.nickname%> </td>
       <td> <%= t.nome %> </td>
       <td> <%= t.email %> </td>
       <td> <%= t.tipo %> </td>
       <td>
         <%=button_to 'Detalhes', t, method: :get, class:"btn btn-default btn-sm"%>
         <%=button_to 'Editar', edit_contum_path(t), method: :get, class:"btn btn-success btn-sm"%>
         <%=button_to 'Apagar', t, method: :delete, data: { confirm:'Apagar Conta?'}, class:"btn btn-danger btn-sm"%>
       </td>
     </tbody>
    <%end%>
   </table>
  </div>
</div>

<div class="col-md-12 col-md-offset-3">
  <div id="collection_paginator">
    <%= will_paginate @contas%>
  </div>
</div>



<script type="text/javascript">
  $(document).ready( function() {
    $('#collection_paginator a').each( function() {
      $(this).attr( 'data-remote', 'true' )
      $(this).attr( 'data-replace', '#collection_index' )
    })
    $('#collection_paginator a').on("click", function() {
      $(window).scrollTop(0);
    })
  })
</script>
