<h1>Editar Noticia</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 main">
    <%= form_for(@noticia, url: {action: "update"}) do |f| %>
      <%= f.label :nome %>
      <%= f.text_field :nome, class: 'form-control' %>

      <%= f.label :descricao %>
      <%= f.text_field :descricao, class: 'form-control' %>

      <%= f.label :texto %>
      <%= f.text_area :texto, class: 'form-control', style: "height:200px" %>

      <%= f.label :data %>
      <%= f.date_field :data, class: 'form-control' %>

      <%= f.label :tags %>
      <%= f.text_field :tags, class: 'form-control' , style:"margin-bottom:30px;"%>

      <br><%= f.label :ativo %>
      <%= f.check_box :ativo %><br>

      <div class="col-md-6">
        <%= f.label :foto %>
        <%= f.file_field :foto %>
      </div>

      <div class="class-md-6">
        <%= image_tag @noticia.foto, height:120, width:120 %>
      </div><br>

      <br><%= f.submit "Editar Noticia", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
