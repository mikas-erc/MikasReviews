<h1>Adicionar Noticias</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 main">
    <%= form_for(@noticia, url: {action: "create"}) do |f| %>
    <% if @noticia.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@noticia.errors.count, "error") %>.
        </div>
        <ul>
        <% @noticia.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
      <%= f.label :nome %>
      <%= f.text_field :nome, class: 'form-control' %>

      <%= f.label :descricao %>
      <%= f.text_field :descricao, class: 'form-control' %>

      <%= f.label :texto %>
      <%= f.text_area :texto, class: 'form-control' %>

      <%= f.label :data %>
      <%= f.date_field :data, class: 'form-control' %>

      <%= f.label :tags %>
      <%= f.text_field :tags, class: 'form-control' %>

      <div class="col-md-12">
        <%= f.label :foto %>
        <%= f.file_field :foto %>
      </div>

      <br><%= f.submit "Adicionar Noticia", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
