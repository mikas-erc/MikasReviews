<div class="col-md-12 main">
  <div class="col-md-2">
    <%=button_to 'Inserir', new_noticium_path, method: :get, class:"btn btn-success"%>
  </div>

<div class="col-md-12" id="collection_index">
  <table class="table table-striped table-hover">
    <thead>
       <tr>
         <th>ID</th>
         <th>Nome</th>
         <th>descricao</th>
         <th>Data</th>
         <th>Tags </th>
         <th>Ações</th>
       </tr>
    </thead>
    <% @noticias.each do |t| %>
     <tbody>
       <td> <%= t.id %> </td>
       <td> <%= t.nome %> </td>
       <td> <%= t.descricao %> </td>
       <td> <%= t.data %>  </td>
       <td> <%= t.tags %> </td>
       <td>
         <%=button_to 'Detalhes', t, method: :get, class:"btn btn-default btn-sm"%>
         <%=button_to 'Editar', edit_noticium_path(t), method: :get, class:"btn btn-success btn-sm"%>
         <%=button_to 'Apagar', t, method: :delete, data: { confirm:'Apagar noticia?'}, class:"btn btn-danger btn-sm"%>
       </td>
     </tbody>
    <%end%>
   </table>
</div>

</div>

<div class="col-md-12 col-md-offset-3">
  <div id="collection_paginator">
    <%= will_paginate @noticias%>
  </div>
</div>



<script type="text/javascript">
  $(document).ready( function() {
    $('#collection_paginator a').each( function() {
      $(this).attr( 'data-remote', 'true' )
      $(this).attr( 'data-replace', '#collection_index' )
    })
    $('#collection_paginator a').on("click", function() {
      $(window).scrollTop(0);
    })
  })
</script>
