<div class="row">


  <div class="col-md-offset-3 col-md-6 main">
    <div style="text-align:center; margin-bottom:15px;">
      <span style="font-size:30px;"><%= @noticia.nome %></span> <br>
    </div>
    <div class="col-md-12" style="margin-top:20px;margin-bottom:20px;">
      <center><%= image_tag @noticia.foto, style: "max-height:300px;max-width:300px;" %></center>
    </div>
    Descricao: <%= @noticia.descricao %> <br>
    Texto:  <%= @noticia.texto %> <br>
    Data:  <%= @noticia.data %> <br>
    Tags: <%= @noticia.tags %> <br>

    <div style="margin-top:20px;">
      <div class="col-md-6"><%=button_to 'Editar', edit_noticium_path(@noticia), method: :get, class:"btn btn-success btn-sm"%></div>
      <div class="col-md-6"><%=button_to 'Apagar', @noticia, method: :delete, data: { confirm:'Apagar noticia?'}, class:"btn btn-danger btn-sm"%></div>
    </div>
  </div>




</div>
