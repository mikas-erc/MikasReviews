<div style="margin-left:15%" id="collection_index">
  <% @contas.each do |j| %>
    <%= link_to view_conta_path(j) do %>
    <div class="col-md-3 main">
       <div class="col-md-6" style="padding-left:0px; margin-top:10px; margin-bottom:10px;">
         <%= image_tag j.foto, height:120, width:120 %>
       </div>
       <div class="col-md-6" style="margin-top:45px">
           <span style="font-size:15px;"><%=j.nickname%></span>
           <% if j.verificado? %>
            <%=image_tag "verificado.png", style:"margin-bottom:6px;"  %>
           <%end%><br>
           <span class="text-info"><%=j.tipo%></span>
       </div>
    </div>
    <%end%>
  <%end%>


<div class="col-md-12 col-md-offset-3">
  <div id="collection_paginator">
    <%= will_paginate @contas%>
  </div>
</div>

</div>

<script type="text/javascript">
  $(document).ready( function() {
    $('#collection_paginator a').each( function() {
      $(this).attr( 'data-remote', 'true' )
      $(this).attr( 'data-replace', '#collection_index' )
    })
    $('#collection_paginator a').on("click", function() {
      $(window).scrollTop(0);
    })
  })
</script>
