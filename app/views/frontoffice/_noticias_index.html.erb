<div style="margin-left:15%" id="collection_index">
  <% @noticias.each do |j| %>
    <%= link_to view_noticia_path(j) do %>
    <div class="col-md-10 main">
       <div class="col-md-4" style="padding-left:0px; margin-top:10px; margin-bottom:10px;">
         <%= image_tag j.foto, height:120, width:120 %>
       </div>
       <div class="col-md-8" style="padding:0px;">
           <div class="titulo" style="margin-bottom:10px;"><span style="font-size:20px;"><%=j.nome%></span><br>
           <span class="text-muted"><%=j.data%></span></div><br>
           <div class="descricao"><span> <%=j.descricao%> </span></div><br>
           <div class="tags"><span> <%=j.tags%> </span></div>
       </div>
    </div>
    <%end%>
  <%end%>


<div class="col-md-12 col-md-offset-3">
  <div id="collection_paginator">
    <%= will_paginate @noticias%>
  </div>
</div>

</div>

<script type="text/javascript">
  $(document).ready( function() {
    $('#collection_paginator a').each( function() {
      $(this).attr( 'data-remote', 'true' )
      $(this).attr( 'data-replace', '#collection_index' )
    })
    $('#collection_paginator a').on("click", function() {
      $(window).scrollTop(0);
    })
  })
</script>
