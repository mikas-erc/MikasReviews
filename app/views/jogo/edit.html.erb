<h1>Editar Jogo</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 main">
    <%= form_for(@jogo, url: {action: "update"}) do |f| %>
      <%= f.label :nome %>
      <%= f.text_field :nome, class: 'form-control' %>

      <%= f.label :preco %>
      <%= f.number_field :preco, class: 'form-control', step: '0.01' %>

      <%= f.label :descricao %>
      <%= f.text_area :descricao, class: 'form-control' %>

      <%= f.label :developer %>
      <%= f.text_field :developer, class: 'form-control' %>

      <%= f.label :steam, style:"margin-top:20px"%>
      <%= f.check_box :steam%><br>

      <%= f.label :idsteam, style:"margin-top:10px" %>
      <%= f.number_field :idsteam, class: 'form-control' %>

      <%= f.label :data_de_lancamento %>
      <%= f.date_field :data_de_lancamento, class: 'form-control',style:"margin-bottom:20px;" %>

      <div class="col-md-6">
        <%= f.label :foto %>
        <%= f.file_field :foto %>
      </div>

      <div class="class-md-6">
        <%= image_tag @jogo.foto, height:120, width:120 %>
      </div><br>

      <br><%= f.submit "Editar jogo", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
