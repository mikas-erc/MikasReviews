<h1>Adicionar Jogo</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 main">
    <center><%= button_to 'Steam', steam_path, class: "btn btn-primary"%></center><br>
    <%= form_for(@jogo, url: news_path) do |f| %>
      <%= f.label :steamid %>
      <%= f.number_field :idsteam, class: 'form-control' %>

      <%= f.hidden_field :steam, class: 'form-control', value: '1' %>



      <br><%= f.submit "Adicionar jogo", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
